<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HLC.Net.AboutWindow"
        TransparencyLevelHint="AcrylicBlur"
        Background="#80FFFFFF"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        Icon="avares://HLC.Net/Assets/logo.ico"
        Title="AboutWindow">
  <StackPanel Width="300" Height="220">
    <Panel Height="20"/>
    <Border BorderThickness="2" BorderBrush="Gray" Margin="16" Height="168">
      <StackPanel>
        <TextBlock FontSize="36" Margin="16,4">
          <materialIcons:MaterialIcon Kind="BlackMesa" Width="36" Height="36"/>
          HLC.Net
        </TextBlock>
        <Separator/>
        <TextBlock Text="❤ Dr.Abc" FontSize="12" Margin="32,4"/>
        <HyperlinkButton Margin="32,0" NavigateUri="https://github.com/DrAbcOfficial/HLC.Net">- Source Code</HyperlinkButton>
        <TextBlock Text="🙇‍" FontSize="12" Margin="32,0"/>
        <HyperlinkButton Margin="32,0" NavigateUri="https://avaloniaui.net/">· Avalonia</HyperlinkButton>
      </StackPanel>
    </Border>
  </StackPanel>
</Window>
